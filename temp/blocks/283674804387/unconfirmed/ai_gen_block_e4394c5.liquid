{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  {{ block.settings.text_font | font_face: font_display: 'swap' }}

  .ai-skincare-text-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    text-align: center;
  }

  .ai-skincare-text__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-skincare-text__line-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.spacing }}px;
    margin-bottom: {{ block.settings.line_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-skincare-text__line-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-skincare-text__text-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    margin: 0;
  }

  .ai-skincare-text__image-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    flex-shrink: 0;
  }

  .ai-skincare-text__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .ai-skincare-text__image-link-{{ ai_gen_id }}:hover .ai-skincare-text__image-wrapper-{{ ai_gen_id }} {
    border-color: {{ block.settings.hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-skincare-text__image-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
  }

  .ai-skincare-text__placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    background-color: {{ block.settings.placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-skincare-text__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-skincare-text__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.7 }}px;
    }

    .ai-skincare-text__image-{{ ai_gen_id }},
    .ai-skincare-text__placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.7 }}px;
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    .ai-skincare-text__line-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.7 }}px;
      margin-bottom: {{ block.settings.line_spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-skincare-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-skincare-text__container-{{ ai_gen_id }}">
    <div class="ai-skincare-text__line-{{ ai_gen_id }}">
      <span class="ai-skincare-text__text-{{ ai_gen_id }}">{{ block.settings.text_line_1 }}</span>
    </div>

    <div class="ai-skincare-text__line-{{ ai_gen_id }}">
      {% if block.settings.show_image_1 %}
        <a 
          href="{{ block.settings.image_1_link }}" 
          class="ai-skincare-text__image-link-{{ ai_gen_id }}"
          {% if block.settings.image_1_link == blank %}aria-disabled="true" tabindex="-1"{% endif %}
        >
          <div class="ai-skincare-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_1 %}
              <img
                src="{{ block.settings.image_1 | image_url: width: 400 }}"
                alt="{{ block.settings.image_1.alt | escape }}"
                class="ai-skincare-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-skincare-text__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        </a>
      {% endif %}
      <span class="ai-skincare-text__text-{{ ai_gen_id }}">{{ block.settings.text_line_2 }}</span>
    </div>

    <div class="ai-skincare-text__line-{{ ai_gen_id }}">
      <span class="ai-skincare-text__text-{{ ai_gen_id }}">{{ block.settings.text_line_3 }}</span>
      {% if block.settings.show_image_2 %}
        <a 
          href="{{ block.settings.image_2_link }}" 
          class="ai-skincare-text__image-link-{{ ai_gen_id }}"
          {% if block.settings.image_2_link == blank %}aria-disabled="true" tabindex="-1"{% endif %}
        >
          <div class="ai-skincare-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_2 %}
              <img
                src="{{ block.settings.image_2 | image_url: width: 400 }}"
                alt="{{ block.settings.image_2.alt | escape }}"
                class="ai-skincare-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-skincare-text__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        </a>
      {% endif %}
      {% if block.settings.text_line_4 != blank %}
        <span class="ai-skincare-text__text-{{ ai_gen_id }}">{{ block.settings.text_line_4 }}</span>
      {% endif %}
      {% if block.settings.show_image_3 %}
        <a 
          href="{{ block.settings.image_3_link }}" 
          class="ai-skincare-text__image-link-{{ ai_gen_id }}"
          {% if block.settings.image_3_link == blank %}aria-disabled="true" tabindex="-1"{% endif %}
        >
          <div class="ai-skincare-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_3 %}
              <img
                src="{{ block.settings.image_3 | image_url: width: 400 }}"
                alt="{{ block.settings.image_3.alt | escape }}"
                class="ai-skincare-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-skincare-text__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        </a>
      {% endif %}
    </div>

    <div class="ai-skincare-text__line-{{ ai_gen_id }}">
      <span class="ai-skincare-text__text-{{ ai_gen_id }}">{{ block.settings.text_line_5 }}</span>
    </div>
  </div>
</div>

