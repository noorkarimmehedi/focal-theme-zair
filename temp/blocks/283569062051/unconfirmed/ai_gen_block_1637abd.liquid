{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glass-showcase-{{ ai_gen_id }} {
    position: relative;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-glass-showcase-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-glass-showcase-card-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    background: {{ block.settings.card_background }};
    backdrop-filter: blur({{ block.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_amount }}px);
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    width: {{ block.settings.card_width }}%;
    max-width: 600px;
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.card_content_spacing }}px;
  }

  .ai-glass-showcase-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    width: {{ block.settings.image_width }}%;
    max-width: 500px;
    margin-left: auto;
  }

  .ai-glass-showcase-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-glass-showcase-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    min-height: 500px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-glass-showcase-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-glass-showcase-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-glass-showcase-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    text-transform: {{ block.settings.title_transform }};
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    line-height: 1.2;
    margin: 0;
  }

  .ai-glass-showcase-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: {{ block.settings.price_weight }};
    color: {{ block.settings.price_color }};
    margin: 0;
  }

  .ai-glass-showcase-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-glass-showcase-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    text-transform: {{ block.settings.button_text_transform }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    width: fit-content;
  }

  .ai-glass-showcase-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-glass-showcase-container-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-glass-showcase-card-{{ ai_gen_id }} {
      position: relative;
      top: auto;
      left: auto;
      transform: none;
      width: 100%;
      max-width: 100%;
      padding: {{ block.settings.card_padding | times: 0.7 }}px;
      order: 2;
      margin-top: -{{ block.settings.mobile_overlap }}px;
    }

    .ai-glass-showcase-image-wrapper-{{ ai_gen_id }} {
      width: 100%;
      order: 1;
      margin-left: 0;
    }

    .ai-glass-showcase-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-glass-showcase-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.8 }}px;
    }

    .ai-glass-showcase-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-glass-showcase-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding | times: 0.6 }}px {{ block.settings.horizontal_padding | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-glass-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-glass-showcase-container-{{ ai_gen_id }}">
    <div class="ai-glass-showcase-card-{{ ai_gen_id }}">
      {% if block.settings.product_title != blank %}
        <h2 class="ai-glass-showcase-title-{{ ai_gen_id }}">{{ block.settings.product_title }}</h2>
      {% endif %}

      {% if block.settings.product_price != blank %}
        <div class="ai-glass-showcase-price-{{ ai_gen_id }}">{{ block.settings.product_price }}</div>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-glass-showcase-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-glass-showcase-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-glass-showcase-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.product_image %}
        <img
          src="{{ block.settings.product_image | image_url: width: 1200 }}"
          alt="{{ block.settings.product_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.product_image.width }}"
          height="{{ block.settings.product_image.height }}"
          class="ai-glass-showcase-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-glass-showcase-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
          <div class="ai-glass-showcase-empty-state-{{ ai_gen_id }}">
            Add a product image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

