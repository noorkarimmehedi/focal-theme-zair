{% doc %}
  @prompt
    generate me a hero section with slideshow - three slides visible, navigation dots below slides, on mobile version arrow keys on both left and right side alongside dots
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-hero-slideshow__container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slide_height }}px;
  }

  .ai-hero-slideshow__slides-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-hero-slideshow__slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: {{ block.settings.content_position_vertical }};
    justify-content: {{ block.settings.content_position_horizontal }};
  }

  .ai-hero-slideshow__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-slideshow__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slideshow__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-slideshow__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .ai-hero-slideshow__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: {{ block.settings.text_alignment }};
    padding: 40px 20px;
    max-width: {{ block.settings.content_max_width }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slideshow__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slideshow__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-hero-slideshow__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 3;
    align-items: center;
  }

  .ai-hero-slideshow__arrow-{{ ai_gen_id }} {
    display: none;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-hero-slideshow__arrow-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .ai-hero-slideshow__arrow-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-hero-slideshow__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
  }

  .ai-hero-slideshow__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-hero-slideshow__dot-{{ ai_gen_id }}.active {
    background-color: rgba(255, 255, 255, 1);
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slideshow__container-{{ ai_gen_id }} {
      height: {{ block.settings.slide_height_mobile }}px;
    }

    .ai-hero-slideshow__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-slideshow__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-hero-slideshow__arrow-{{ ai_gen_id }} {
      display: flex;
    }

    .ai-hero-slideshow__controls-{{ ai_gen_id }} {
      gap: 16px;
    }
  }
{% endstyle %}

<hero-slideshow-{{ ai_gen_id }}
  class="ai-hero-slideshow-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-slideshow__container-{{ ai_gen_id }}">
    <div class="ai-hero-slideshow__slides-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'slide_' | append: i | append: '_image'
          assign heading_key = 'slide_' | append: i | append: '_heading'
          assign subheading_key = 'slide_' | append: i | append: '_subheading'
          assign button_text_key = 'slide_' | append: i | append: '_button_text'
          assign button_link_key = 'slide_' | append: i | append: '_button_link'

          assign slide_image = block.settings[image_key]
          assign slide_heading = block.settings[heading_key]
          assign slide_subheading = block.settings[subheading_key]
          assign slide_button_text = block.settings[button_text_key]
          assign slide_button_link = block.settings[button_link_key]
        %}

        <div class="ai-hero-slideshow__slide-{{ ai_gen_id }}" data-slide="{{ i }}">
          {% if slide_image %}
            <img
              src="{{ slide_image | image_url: width: 2000 }}"
              alt="{{ slide_image.alt | escape }}"
              loading="lazy"
              width="{{ slide_image.width }}"
              height="{{ slide_image.height }}"
              class="ai-hero-slideshow__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-hero-slideshow__image-placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}

          <div class="ai-hero-slideshow__overlay-{{ ai_gen_id }}"></div>

          <div class="ai-hero-slideshow__content-{{ ai_gen_id }}">
            {% if slide_heading != blank %}
              <h2 class="ai-hero-slideshow__heading-{{ ai_gen_id }}">{{ slide_heading }}</h2>
            {% endif %}

            {% if slide_subheading != blank %}
              <div class="ai-hero-slideshow__subheading-{{ ai_gen_id }}">{{ slide_subheading }}</div>
            {% endif %}

            {% if slide_button_text != blank and slide_button_link != blank %}
              <a href="{{ slide_button_link }}" class="ai-hero-slideshow__button-{{ ai_gen_id }}">
                {{ slide_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="ai-hero-slideshow__controls-{{ ai_gen_id }}">
      <button
        class="ai-hero-slideshow__arrow-{{ ai_gen_id }} ai-hero-slideshow__arrow-prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="ai-hero-slideshow__dots-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          <button
            class="ai-hero-slideshow__dot-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
            data-slide="{{ i }}"
            aria-label="Go to slide {{ i }}"
          ></button>
        {% endfor %}
      </div>

      <button
        class="ai-hero-slideshow__arrow-{{ ai_gen_id }} ai-hero-slideshow__arrow-next-{{ ai_gen_id }}"
        aria-label="Next slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</hero-slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSlideshow{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 3;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.slidesContainer = this.querySelector('.ai-hero-slideshow__slides-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-hero-slideshow__dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-hero-slideshow__arrow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-hero-slideshow__arrow-next-{{ ai_gen_id }}');
        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;

        this.setupEventListeners();
        
        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            this.goToSlide(index);
            if (this.autoplay) {
              this.resetAutoplay();
            }
          });
        });

        this.prevButton.addEventListener('click', () => {
          this.previousSlide();
          if (this.autoplay) {
            this.resetAutoplay();
          }
        });

        this.nextButton.addEventListener('click', () => {
          this.nextSlide();
          if (this.autoplay) {
            this.resetAutoplay();
          }
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlidePosition();
        this.updateDots();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateSlidePosition();
        this.updateDots();
      }

      previousSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.updateSlidePosition();
        this.updateDots();
      }

      updateSlidePosition() {
        const offset = -this.currentSlide * 100;
        this.slidesContainer.style.transform = `translateX(${offset}%)`;
      }

      updateDots() {
        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      resetAutoplay() {
        clearInterval(this.autoplayInterval);
        this.startAutoplay();
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('hero-slideshow-{{ ai_gen_id }}', HeroSlideshow{{ai_gen_id}});
  })();
</script>

