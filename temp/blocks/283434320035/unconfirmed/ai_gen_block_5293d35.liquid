{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ingredient-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-ingredient-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-ingredient-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-ingredient-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
  }

  .ai-ingredient-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-ingredient-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-ingredient-item-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
  }

  .ai-ingredient-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    position: relative;
    overflow: hidden;
  }

  .ai-ingredient-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-ingredient-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-ingredient-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-ingredient-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.7) 50%, transparent 100%);
    padding: 20px;
    transform: translateY(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-ingredient-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_name_size }}px;
    color: #ffffff;
    font-weight: 600;
    margin: 0 0 8px;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-ingredient-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_description_size }}px;
    color: #ffffff;
    margin: 0;
    line-height: 1.5;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover {
    transform: scale(1.15);
    z-index: 10;
    border-color: {{ block.settings.hover_border_color }};
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-image-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-description-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-overlay-{{ ai_gen_id }} {
    background: linear-gradient(to top, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.85) 70%, rgba(0, 0, 0, 0.3) 100%);
  }

  .ai-ingredient-grid-{{ ai_gen_id }}:has(.ai-ingredient-item-{{ ai_gen_id }}:hover) .ai-ingredient-item-{{ ai_gen_id }}:not(:hover) {
    transform: scale(0.9);
    opacity: 0.6;
    filter: grayscale(0.3);
  }

  @media screen and (max-width: 749px) {
    .ai-ingredient-grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 16px;
      padding-bottom: 16px;
      -webkit-overflow-scrolling: touch;
    }

    .ai-ingredient-item-{{ ai_gen_id }} {
      flex: 0 0 280px;
      scroll-snap-align: start;
    }

    .ai-ingredient-item-{{ ai_gen_id }}:hover {
      transform: scale(1.05);
    }

    .ai-ingredient-grid-{{ ai_gen_id }}:has(.ai-ingredient-item-{{ ai_gen_id }}:hover) .ai-ingredient-item-{{ ai_gen_id }}:not(:hover) {
      transform: scale(0.95);
      opacity: 0.7;
    }

    .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar {
      height: 6px;
    }

    .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 10px;
    }

    .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
      background: {{ block.settings.scrollbar_color }};
      border-radius: 10px;
    }

    .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar-thumb:hover {
      background: {{ block.settings.scrollbar_hover_color }};
    }
  }
{% endstyle %}

<div class="ai-ingredient-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ingredient-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-ingredient-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-ingredient-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-ingredient-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-ingredient-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'ingredient_' | append: i | append: '_image'
          assign name_key = 'ingredient_' | append: i | append: '_name'
          assign description_key = 'ingredient_' | append: i | append: '_description'
          
          assign ingredient_image = block.settings[image_key]
          assign ingredient_name = block.settings[name_key]
          assign ingredient_description = block.settings[description_key]
        %}

        <div class="ai-ingredient-item-{{ ai_gen_id }}">
          <div class="ai-ingredient-image-wrapper-{{ ai_gen_id }}">
            {% if ingredient_image %}
              <img
                src="{{ ingredient_image | image_url: width: 600 }}"
                alt="{{ ingredient_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="{{ block.settings.image_height }}"
                class="ai-ingredient-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-ingredient-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            
            <div class="ai-ingredient-overlay-{{ ai_gen_id }}">
              {% if ingredient_name != blank %}
                <h3 class="ai-ingredient-name-{{ ai_gen_id }}">{{ ingredient_name }}</h3>
              {% endif %}
              
              {% if ingredient_description != blank %}
                <p class="ai-ingredient-description-{{ ai_gen_id }}">{{ ingredient_description }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

