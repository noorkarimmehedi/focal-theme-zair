{% comment %}
  Swipeable Horizontal Category Section
  Modern premium design with expand-on-hover animation
{% endcomment %}

{% assign bg_color = section.settings.background_color | default: '#fafafa' %}
{% assign heading_color = section.settings.heading_color | default: '#1a1a1a' %}
{% assign description_color = section.settings.description_color | default: '#666' %}
{% assign padding_top = section.settings.padding_top | default: 80 %}
{% assign padding_bottom = section.settings.padding_bottom | default: 80 %}
{% assign padding_top_mobile = section.settings.padding_top_mobile | default: 60 %}
{% assign padding_bottom_mobile = section.settings.padding_bottom_mobile | default: 60 %}
{% assign heading_font = section.settings.heading_font %}
{% assign description_font = section.settings.description_font %}

<style>
  {% if heading_font %}
    {{ heading_font | font_face: font_display: 'swap' }}
  {% endif %}
  
  {% if description_font %}
    {{ description_font | font_face: font_display: 'swap' }}
  {% endif %}

  .category-section-{{ section.id }} {
    padding: {{ padding_top }}px 0 {{ padding_bottom }}px 0;
    background: {{ bg_color }};
  }

  .category-section-{{ section.id }} .category-title {
    color: {{ heading_color }};
    {% if heading_font %}
      font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
      font-weight: {{ heading_font.weight }};
      font-style: {{ heading_font.style }};
    {% endif %}
  }

  .category-section-{{ section.id }} .category-description {
    color: {{ description_color }};
    {% if description_font %}
      font-family: {{ description_font.family }}, {{ description_font.fallback_families }};
      font-weight: {{ description_font.weight }};
      font-style: {{ description_font.style }};
    {% endif %}
  }

  .category-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 8px;
  }

  .category-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 48px;
    gap: 40px;
  }

  .category-title {
    font-size: 42px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .category-description {
    max-width: 420px;
    font-size: 15px;
    line-height: 1.6;
    color: #666;
    text-align: right;
  }

  .category-scroll-wrapper {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .category-scroll-wrapper::-webkit-scrollbar {
    display: none;
  }

  .category-grid {
    display: flex;
    gap: 6px;
    padding-bottom: 8px;
    justify-content: center;
    align-items: center;
  }

  /* Only shrink other cards when one is actively hovered */
  .category-card:hover ~ .category-card,
  .category-cta-card:hover ~ .category-card,
  .category-card:has(~ .category-card:hover),
  .category-card:has(~ .category-cta-card:hover) {
    width: 100px;
    opacity: 0.6;
  }

  .category-cta-card:hover ~ .category-cta-card,
  .category-card:hover ~ .category-cta-card {
    width: 100px;
    opacity: 0.6;
  }

  /* Hovered card expands */
  .category-card:hover,
  .category-cta-card:hover {
    width: 500px;
  }

  .category-card {
    width: 360px;
    height: 480px;
    border-radius: 24px;
    overflow: hidden;
    position: relative;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    background: #fff;
    cursor: pointer;
    flex-shrink: 0;
  }

  .category-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .category-card:hover .category-card-image {
    transform: scale(1.05);
  }

  .category-card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 28px 24px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0.4) 60%, transparent 100%);
    transition: opacity 0.3s ease;
  }

  /* Hide overlay text when card is collapsed */
  .category-card:hover ~ .category-card .category-card-overlay,
  .category-card:has(~ .category-card:hover) .category-card-overlay,
  .category-cta-card:hover ~ .category-card .category-card-overlay,
  .category-card:has(~ .category-cta-card:hover) .category-card-overlay {
    opacity: 0;
  }

  .category-cta-card:hover ~ .category-cta-card .category-cta-content,
  .category-card:hover ~ .category-cta-card .category-cta-content {
    opacity: 0;
  }

  .category-tag {
    display: inline-flex;
    align-items: center;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    color: #1a1a1a;
    margin-bottom: 12px;
    backdrop-filter: blur(10px);
  }

  .category-card-title {
    font-size: 24px;
    font-weight: 600;
    color: #fff;
    margin: 0;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .category-cta-card {
    width: 360px;
    height: 480px;
    border-radius: 24px;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    flex-shrink: 0;
  }

  .category-cta-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .category-cta-card:hover::before {
    opacity: 1;
  }

  .category-cta-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    transition: opacity 0.3s ease;
  }

  .category-cta-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.4s ease;
  }

  .category-cta-card:hover .category-cta-icon {
    transform: scale(1.1) rotate(90deg);
  }

  .category-cta-text {
    font-size: 20px;
    font-weight: 600;
    color: #fff;
    margin: 0;
  }

  @media (max-width: 767px) {
    .category-section-{{ section.id }} {
      padding: {{ padding_top_mobile }}px 0 {{ padding_bottom_mobile }}px 0;
      overflow-x: hidden !important;
    }

    .category-container {
      padding: 0 12px !important;
      margin: 0 !important;
      max-width: 100% !important;
    }

    .category-header {
      flex-direction: column;
      margin-bottom: 32px;
      gap: 16px;
    }

    .category-title {
      font-size: 32px;
    }

    .category-description {
      text-align: left;
      max-width: 100%;
    }

    .category-scroll-wrapper {
      overflow-x: auto;
      margin: 0 -12px !important;
      padding: 0 12px !important;
    }

    .category-grid {
      justify-content: flex-start;
      gap: 12px;
    }

    .category-card,
    .category-cta-card {
      width: 240px;
      height: 360px;
    }

    /* Mobile: simpler hover effect */
    .category-card:hover,
    .category-cta-card:hover {
      width: 280px;
    }

    .category-card:hover ~ .category-card,
    .category-card:has(~ .category-card:hover) {
      width: 200px;
    }

    .category-card-title {
      font-size: 20px;
    }
  }
</style>

<section class="category-section category-section-{{ section.id }}">
  <div class="category-container">
    <div class="category-header">
      <h2 class="category-title">{{ section.settings.heading }}</h2>
      <p class="category-description">{{ section.settings.description }}</p>
    </div>

    <div class="category-scroll-wrapper">
      <div class="category-grid">
        {% for block in section.blocks %}
          {% if block.type == 'category' %}
            <a href="{{ block.settings.link }}" class="category-card">
              {% if block.settings.image %}
                <img 
                  src="{{ block.settings.image | img_url: '600x' }}" 
                  alt="{{ block.settings.title }}"
                  class="category-card-image"
                  loading="lazy"
                >
              {% else %}
                <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
              {% endif %}
              
              <div class="category-card-overlay">
                {% if block.settings.tag %}
                  <div class="category-tag">
                    {{ block.settings.tag }}
                  </div>
                {% endif %}
                <h3 class="category-card-title">{{ block.settings.title }}</h3>
              </div>
            </a>
          {% endif %}
        {% endfor %}

        <a href="{{ section.settings.view_all_link }}" class="category-cta-card">
          <div class="category-cta-content">
            <div class="category-cta-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="16"/>
                <line x1="8" y1="12" x2="16" y2="12"/>
              </svg>
            </div>
            <p class="category-cta-text">{{ section.settings.cta_text }}</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

