{% comment %}
  Premium E-commerce Footer
  Design: Clean, minimal footer with boxed link sections
  Features: Scrolling marquee, logo, 2x2 box grid, copyright, social bar
{% endcomment %}

{% style %}
  #shopify-section-{{ section.id }} .premium-footer {
    width: 100%;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .premium-footer__marquee {
    background-color: {{ section.settings.marquee_bg_color }};
    overflow: hidden;
    padding: 12px 0;
    position: relative;
    border: 1px solid #000000;
  }

  #shopify-section-{{ section.id }} .premium-footer__marquee-content {
    display: flex;
    white-space: nowrap;
    animation: premium-footer-scroll 30s linear infinite;
  }

  #shopify-section-{{ section.id }} .premium-footer__marquee-text {
    color: {{ section.settings.marquee_text_color }};
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 3px;
    padding: 0 40px;
  }

  @keyframes premium-footer-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  #shopify-section-{{ section.id }} .premium-footer__main {
    background-color: {{ section.settings.main_bg_color }};
    padding: 60px 20px 40px;
  }

  #shopify-section-{{ section.id }} .premium-footer__content {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  #shopify-section-{{ section.id }} .premium-footer__logo {
    text-align: center;
    margin-bottom: 40px;
  }

  #shopify-section-{{ section.id }} .premium-footer__logo-image {
    max-width: 120px;
    height: auto;
    display: inline-block;
  }

  #shopify-section-{{ section.id }} .premium-footer__logo-text {
    font-size: 32px;
    font-weight: 700;
    color: {{ section.settings.logo_color }};
    letter-spacing: 2px;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .premium-footer__box-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    max-width: 600px;
    margin: 0 auto;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .premium-footer__box {
    background-color: {{ section.settings.box_bg_color }};
    border: 2px solid {{ section.settings.box_border_color }};
    padding: 12px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    min-height: 50px;
  }

  #shopify-section-{{ section.id }} .premium-footer__box:hover {
    background-color: {{ section.settings.box_hover_bg_color }};
    border-color: {{ section.settings.box_hover_border_color }};
    transform: translateY(-2px);
  }

  #shopify-section-{{ section.id }} .premium-footer__box-text {
    color: {{ section.settings.box_text_color }};
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 1px;
    margin: 0;
    line-height: 1.3;
  }

  #shopify-section-{{ section.id }} .premium-footer__box:hover .premium-footer__box-text {
    color: {{ section.settings.box_hover_text_color }};
  }

  #shopify-section-{{ section.id }} .premium-footer__copyright-wrapper {
    text-align: center;
  }

  #shopify-section-{{ section.id }} .premium-footer__copyright {
    color: {{ section.settings.copyright_color }};
    font-size: 10px;
    letter-spacing: 1px;
    margin: 0 0 8px;
  }

  #shopify-section-{{ section.id }} .premium-footer__credit {
    color: {{ section.settings.credit_color }};
    font-size: 10px;
    letter-spacing: 0.5px;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .premium-footer__credit-link {
    color: {{ section.settings.credit_link_color }};
    text-decoration: underline;
    transition: opacity 0.3s ease;
  }

  #shopify-section-{{ section.id }} .premium-footer__credit-link:hover {
    opacity: 0.7;
  }

  #shopify-section-{{ section.id }} .premium-footer__bottom-bar {
    background-color: {{ section.settings.bottom_bar_bg_color }};
    padding: 20px;
  }

  #shopify-section-{{ section.id }} .premium-footer__social-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .premium-footer__social-left {
    display: flex;
    gap: 30px;
  }

  #shopify-section-{{ section.id }} .premium-footer__social-right {
    display: flex;
    gap: 30px;
  }

  #shopify-section-{{ section.id }} .premium-footer__social-link {
    color: {{ section.settings.social_link_color }};
    text-decoration: none;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 2px;
    transition: opacity 0.3s ease;
  }

  #shopify-section-{{ section.id }} .premium-footer__social-link:hover {
    opacity: 0.7;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .premium-footer__marquee-text {
      font-size: 10px;
    }

    #shopify-section-{{ section.id }} .premium-footer__main {
      padding: 40px 15px 30px;
    }

    #shopify-section-{{ section.id }} .premium-footer__box-grid {
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      max-width: 100%;
      padding: 0;
    }

    #shopify-section-{{ section.id }} .premium-footer__box {
      padding: 18px 12px;
      min-height: 80px;
    }

    #shopify-section-{{ section.id }} .premium-footer__box-text {
      font-size: 11px;
    }

    #shopify-section-{{ section.id }} .premium-footer__social-links {
      gap: 20px;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    #shopify-section-{{ section.id }} .premium-footer__social-left {
      gap: 20px;
    }

    #shopify-section-{{ section.id }} .premium-footer__social-right {
      gap: 20px;
    }

    #shopify-section-{{ section.id }} .premium-footer__social-link {
      font-size: 9px;
    }
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .premium-footer__content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      max-width: 1200px;
      margin: 0 auto;
      gap: 60px;
    }

    #shopify-section-{{ section.id }} .premium-footer__left-section {
      flex: 0 0 auto;
      max-width: 350px;
    }

    #shopify-section-{{ section.id }} .premium-footer__logo {
      text-align: left;
      margin-bottom: 40px;
    }

    #shopify-section-{{ section.id }} .premium-footer__logo-text {
      font-size: 40px;
    }

    #shopify-section-{{ section.id }} .premium-footer__logo-image {
      max-width: 150px;
    }

    #shopify-section-{{ section.id }} .premium-footer__copyright-wrapper {
      text-align: left;
    }

    #shopify-section-{{ section.id }} .premium-footer__box-grid {
      flex: 1;
      max-width: 700px;
    }
  }
{% endstyle %}

<footer class="premium-footer">
  <div class="premium-footer__marquee">
    <div class="premium-footer__marquee-content">
      {% for i in (1..20) %}
        <span class="premium-footer__marquee-text">{{ section.settings.marquee_text }}</span>
      {% endfor %}
    </div>
  </div>

  <div class="premium-footer__main">
    <div class="premium-footer__content">
      <div class="premium-footer__left-section">
        <div class="premium-footer__logo">
          {% if section.settings.logo_image != blank %}
            <img
              src="{{ section.settings.logo_image | image_url: width: 600 }}"
              alt="{{ shop.name | escape }}"
              class="premium-footer__logo-image"
              loading="lazy"
            >
          {% else %}
            <h2 class="premium-footer__logo-text">{{ shop.name }}</h2>
          {% endif %}
        </div>

        <div class="premium-footer__copyright-wrapper">
          <p class="premium-footer__copyright">{{ section.settings.copyright_text }}</p>
          <p class="premium-footer__credit">
            Website designed and developed by 
            {% if section.settings.developer_url != blank %}
              <a href="{{ section.settings.developer_url }}" class="premium-footer__credit-link" target="_blank" rel="noopener">{{ section.settings.developer_name }}</a>
            {% else %}
              <span class="premium-footer__credit-link">{{ section.settings.developer_name }}</span>
            {% endif %}
          </p>
        </div>
      </div>

      <div class="premium-footer__box-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'link_box' and block.settings.text != blank -%}
            <a href="{{ block.settings.url }}" class="premium-footer__box" {{ block.shopify_attributes }}>
              <p class="premium-footer__box-text">{{ block.settings.text }}</p>
            </a>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>

  <div class="premium-footer__bottom-bar">
    <div class="premium-footer__social-links">
      <div class="premium-footer__social-left">
        {% if section.settings.social_link_1_text != blank %}
          <a href="{{ section.settings.social_link_1_url }}" class="premium-footer__social-link" target="_blank" rel="noopener">
            {{ section.settings.social_link_1_text }}
          </a>
        {% endif %}
      </div>
      <div class="premium-footer__social-right">
        {% if section.settings.social_link_2_text != blank %}
          <a href="{{ section.settings.social_link_2_url }}" class="premium-footer__social-link" target="_blank" rel="noopener">
            {{ section.settings.social_link_2_text }}
          </a>
        {% endif %}
        {% if section.settings.social_link_3_text != blank %}
          <a href="{{ section.settings.social_link_3_url }}" class="premium-footer__social-link" target="_blank" rel="noopener">
            {{ section.settings.social_link_3_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

